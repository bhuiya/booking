<H1> Booking Index page </H1>
<% if admin_signed_in? %>
   Logged in as <strong><%= current_admin.email %></strong>
   <%= link_to "Admin Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
   <%= link_to "Admin Login", new_admin_session_path, :class => 'navbar-link'  %>
<% end %>

<br>
<%= link_to new_booking_path,  class:"btn btn-success btn-block" do %>
    <i class="fa fa-plus"></i> Create Booking
   <% end %>

<% @bookings.each do |booking| %>
      <br>
      <%=  booking.name  %>
      <br>
      <%=  booking.price  %>
      <br>
      <%=  booking.address  %>
      <br>
      <%=  booking.state  %>
      <br>
      <%=  booking.country  %>
      <br>
      <%=  booking.phone  %>
      <br>
      <%=  booking.email  %>

      <%= link_to booking_path(booking), class: "btn btn-secondary" do %>
           <h6><i class="fa fa-info"  aria-hidden="true"></i> Show </h6>
      <% end %>
      <%= link_to edit_booking_path(booking), class: "btn btn-secondary" do %>
            <h6>  <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit </h6>
      <% end %>
      <%= link_to booking, method: :delete,  class: 'btn btn-secondary' do %>
          <h6>  <i class="fa fa-trash-o" aria-hidden="true"></i> Delete </h6>
      <% end %>

<% end %>
